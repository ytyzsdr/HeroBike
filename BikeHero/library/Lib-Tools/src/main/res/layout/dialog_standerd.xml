<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/coners_bg"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="我是一个标准的dialog"
        android:gravity="center"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textColor="@color/color_deep_gray"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/color_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/do_any"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="辅助操作"
            android:gravity="center"
            android:textColor="@drawable/dialog_text_black_selector"
            android:textSize="17sp"/>
        <View
            android:id="@+id/view_vertical"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line"/>
        <TextView
            android:id="@+id/do_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="主操作"
            android:gravity="center"
            android:textColor="@drawable/dialog_text_theme_selector"
            android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>