<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/black_13_w_w"
                    android:layout_margin="15dp"
                    android:drawableLeft="@drawable/lock_icon"
                    android:drawablePadding="15dp"
                    android:text="@string/using_fragment" />

                <TextView
                    android:id="@+id/closeLockNoData"
                    style="@style/tip_red_13_w_w"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="@string/using_fragment_question" />
            </RelativeLayout>

            <View style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <LinearLayout style="@style/personal_ll">

                    <TextView
                        android:id="@+id/km_person"
                        style="@style/theme_25_w_w"
                        android:text="0" />

                    <TextView
                        android:id="@+id/ride_destance_unit"
                        style="@style/black_12_w_w"
                        android:text="@string/person_km" />
                </LinearLayout>

                <LinearLayout style="@style/personal_ll">

                    <TextView
                        android:id="@+id/min_person"
                        style="@style/theme_25_w_w"
                        android:text="0" />

                    <TextView
                        style="@style/black_12_w_w"
                        android:text="@string/person_min" />
                </LinearLayout>

                <LinearLayout style="@style/personal_ll">

                    <TextView
                        android:id="@+id/kcal_person"
                        style="@style/theme_25_w_w"
                        android:text="0" />

                    <TextView
                        style="@style/black_12_w_w"
                        android:text="@string/person_cal" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/using"
                    style="@style/theme_15_w_w"
                    android:layout_margin="15dp"
                    android:text="@string/using" />

                <TextView
                    android:id="@+id/use_car_code"
                    style="@style/deep_gray_15_w_w"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/using" />

                <TextView
                    android:id="@+id/rev_money"
                    style="@style/tip_red_15_w_w"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp" />

                <TextView
                    android:id="@+id/yuji"
                    style="@style/deep_gray_15_w_w"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/rev_money"
                    android:text="@string/using_money"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/showPaw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical">
            <View style="@style/line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/color_black"
                android:text="@string/using_paw"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:background="@drawable/genaral_btn_click_bg_with_gradient_no_coners">
                    <TextView
                        android:id="@+id/txt_paw1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_black"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:background="@drawable/genaral_btn_click_bg_with_gradient_no_coners">
                    <TextView
                        android:id="@+id/txt_paw2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_black"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:background="@drawable/genaral_btn_click_bg_with_gradient_no_coners">
                    <TextView
                        android:id="@+id/txt_paw3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_black"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:background="@drawable/genaral_btn_click_bg_with_gradient_no_coners">
                    <TextView
                        android:id="@+id/txt_paw4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_black"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow_bg" />

    </LinearLayout>
</LinearLayout>