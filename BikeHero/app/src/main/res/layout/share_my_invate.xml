<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/head_icon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/invite_friends_picture" />

        <TextView
            android:id="@+id/invateMoney1"
            style="@style/black_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/invateMoney2"
            style="@style/black_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center" />

        <TextView
            style="@style/deep_gray_14_w_w"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75dp"
            android:text="@string/my_invate_text_code" />

        <TextView
            android:id="@+id/my_invate_code"
            style="@style/black_17_w_w"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="彩虹单车234567876543" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/shareQrCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/qrCode"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/qrCode"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myAppName"
                        style="@style/black_14_w_w"
                        android:text="@string/app_name" />

                    <TextView
                        android:id="@+id/myAppName_en"
                        style="@style/black_14_w_w"
                        android:text="@string/app_name_en" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/share"
                style="@style/black_14_w_w"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/share_icon"
                android:text="@string/my_invate_share"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>