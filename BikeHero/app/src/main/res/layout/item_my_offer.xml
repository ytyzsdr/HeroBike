<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@color/translate"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/xl_coupon_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/offer_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="58sp"
                android:layout_centerVertical="true"
                android:text="1" />
            <TextView
                android:text="元"
                android:textSize="11sp"
                android:paddingBottom="13dp"
                android:layout_toRightOf="@+id/offer_money"
                android:layout_alignBottom="@+id/offer_money"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/offer_type"
            style="@style/xl_11_ffffff"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:text="邀请赠券"
            />

        <TextView
            android:id="@+id/offer_date"
            style="@style/xl_11_ffffff"
            android:text="有效期至2017.5.6"
            android:layout_marginRight="14dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/offer_type"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/offer_range"
            style="@style/xl_11_ffffff"
            android:layout_marginRight="14dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/offer_date"
            android:text="@string/my_offer_effictor" />
    </RelativeLayout>
    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/translate"/>
</LinearLayout>